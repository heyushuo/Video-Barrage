@import "common/common.styl"


$content-width = 1100px
.view-index

    .nav
        height px(80)
        line-height: @height
        font-size: px(28)
        background: #444
        color #fff

        .nav-wrapper
            margin auto
            width $content-width
            height 100%

    .main
        display: flex
        justify-content: center
        align-items: center

        margin px(80) auto
        width 100%
        max-width: 1200px
        height px(600)

        .section-video
            position relative

            display: flex
            justify-content: center
            align-items center
            align-centent center

            width: 60%
            height 100%
            font-size px(80)
            background: #eee

            .video
                z-index 1

            #dm-main
            #dm-screen
                z-index 2
                abs-top 0
                bottom 0
                right 0
                width 100%
                height 100%

                pointer-events: none

        .section-message
            overflow: hidden
            position: relative
            margin-left px(20)
            width: 40%
            height 100%

            border 1px solid #ddd


            $form-height = px(58)
            .btn-show-latest-message
                abs-left 50%
                top auto
                bottom $form-height + px(10)

                padding px(20) px(60)

                border-radius: px(40)
                transform: translate3d(-50%, 180%, 0)
                text-decoration: none

                color #fff
                background: #fe9252 

                transition: all 200ms

                &.active
                    transform: translate3d(-50%, 0, 0)

            .message-box
                overflow-x: hidden
                overflow-y: auto
                padding px(20)
                height "calc(100% - %s)" % px(60)

            .message
                margin px(12) 0
                line-height 1.4
                font-size px(14)
                border-radius: px(4)

            .form-user-message
                abs-bottom 0
                width 100%

                $input-height = $form-height
                $input-width = 80%
                input
                    padding 0 px(18)
                    width $input-width
                    height $input-height
                    line-height @height

                    border none 
                    border-top 1px solid #eee

                    outline none

                .btn-submit
                    display: inline-block
                    vertical-align: top
                    width 100% - $input-width
                    height $input-height
                    line-height @height

                    text-decoration: none
                    text-align center
                    color #fff
                    background: teal